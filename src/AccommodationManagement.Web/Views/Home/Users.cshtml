@using AccommodationManagement.Domain.DTOs
@model IEnumerable<UserDto>

<h1>Users</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Primary Contact</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Role</td>
                    <td>@user.PrimaryContact</td>
                </tr>
            }
        </tbody>
    </table>
</div>